{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "types": ["node", "electron"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["app/shared/*"],
      "@main/*": ["app/main/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["app/main", "app/preload", "app/shared", "tests", "vite.config.ts", "vitest.config.ts", "playwright.config.ts"]
}
